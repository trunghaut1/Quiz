@model List<Core.Model.News>
@{if (Model.Count > 0)
{
    foreach (Core.Model.News news in Model)
    {
        string src = "";
        if (news.img_link != null)
        {
            src = news.img_link;
        }
        <a href="@Url.Action("newsid/"+news.id,"home")">
            <img width="150" height="150" src="@src" class="thumbnail wp-post-image" alt="@news.title">

            <h2 class="title">@news.title</h2>

            <div class="date">
                <i class="fa fa-clock-o"></i> @news.date &nbsp;
                <i class="fa fa-eye"></i> @news.view_count &nbsp;
            </div>
        </a>
    }
}
}
