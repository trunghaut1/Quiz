@model List<Core.Model.Staff>
@if (Model.Count > 0)
{
    <div class="banner-img-v3 bg-position-fixed" style="background: url(../../Images/1920x1080/06.jpg) no-repeat;">
        <div class="content-sm container">
            <div class="heading-v2 text-center">
                <h2 class="heading-v2-title color-white">Gặp mặt những con người đầy đam mê</h2>
                <p class="heading-v2-text color-white">Chúng tôi là những con người đầy tham vọng, ngoài điều đó ra chúng tôi khá đơn giản =))</p>
            </div>
        </div>
    </div>
    <div class="bg-color-white">
        <section class="content-md container">
            <div class="row">
                @foreach (Core.Model.Staff staff in Model)
                {
                <div class="col-sm-4 sm-margin-b-30 wow flipInY animated">
                    <!-- Team v10 -->
                    <div class="team-v10">
                        <div class="team-preview team-v10-img-effect team-v10-img-effect-two" style="background-image:url(@staff.img_link);">
                            
                        </div>
                        <div class="row margin-b-20">
                            <div class="col-md-6 md-margin-b-10">
                                <h4 class="team-v10-name">@staff.name</h4>
                                <span class="team-v10-position">Designer</span>
                            </div>
                            <div class="col-md-6 text-right md-text-left">
                                <!-- Theme Icons Dark Background -->
                                <ul class="list-inline ul-li-lr-2">
                                    <li class="animate-icon">
                                        <a href="@staff.linkfb" class="animate-icon-wrap animate-icon-sm color-white bg-color-fb bg-color-fb-hover radius-3">
                                            <i class="animate-icon-item fa fa-facebook"></i>
                                            <i class="animate-icon-item fa fa-facebook"></i>
                                        </a>
                                    </li>
                                    <li class="animate-icon" style="display:none;">
                                        <a href="#" class="animate-icon-wrap animate-icon-sm color-white bg-color-tw bg-color-tw-hover radius-3">
                                            <i class="animate-icon-item fa fa-twitter"></i>
                                            <i class="animate-icon-item fa fa-twitter"></i>
                                        </a>
                                    </li>
                                    <li class="animate-icon">
                                        <a href="@staff.linkgoogle" class="animate-icon-wrap animate-icon-sm color-white bg-color-red-light bg-color-red-light-hover radius-3">
                                            <i class="animate-icon-item fa fa-google"></i>
                                            <i class="animate-icon-item fa fa-google"></i>
                                        </a>
                                    </li>
                                </ul>
                                <!-- End Theme Icons Dark Background -->
                            </div>
                        </div>
                        <p>I'm an ambitious workaholic and web designer based in New York. I have a passion for web design and love to create for web and mobile devices.</p>
                    </div>
                    <!-- End Team v10 -->
                </div>
                }
            </div>
            <!--// end row -->
        </section>
    </div>
    
}
