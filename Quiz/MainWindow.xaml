<flat:FlatWindow
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:View="clr-namespace:Quiz.View" 
        x:Class="Quiz.MainWindow"
        xmlns:flat="clr-namespace:FlatTheme.ControlStyle;assembly=FlatTheme"
        Title="QuizApp" Height="596" Width="966" MinHeight="596" MinWidth="966"
        HorizontalContentAlignment="Stretch" WindowStartupLocation="CenterScreen" PreviewKeyDown="Window_PreviewKeyDown" Style="{DynamicResource FlatWindow}" FontSize="15" Closing="FlatWindow_Closing">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="309*"/>
                <ColumnDefinition Width="80*"/>
                <ColumnDefinition Width="78*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" HorizontalAlignment="Left" Orientation="Horizontal" VerticalAlignment="Top">
                <ComboBox x:Name="cbxTheme" Tag="Select Theme" Width="200" Margin="10 0" SelectionChanged="cbxTheme_SelectionChanged">
                    <ComboBoxItem Content="Material"/>
                    <ComboBoxItem Content="Blue"/>
                    <ComboBoxItem Content="Green"/>
                    <ComboBoxItem Content="Red"/>
                    <ComboBoxItem Content="Pink"/>
                    <ComboBoxItem Content="Purple"/>
                    <ComboBoxItem Content="Orange"/>
                    <ComboBoxItem Content="BlueGrey"/>
                </ComboBox>
                <ToggleButton x:Name="btnDark" Margin="5 0" Click="btnDark_Click"/>
                <Label Content="Dark Theme"/>
            </StackPanel>
            <Button x:Name="btnClose" Grid.Column="2" Content="Thoát" Width="100" Height="30" VerticalAlignment="Top" Click="btnClose_Click" Margin="28,0" Visibility="Collapsed"/>
            <Border BorderThickness="0 0 0 1" BorderBrush="{DynamicResource MainColor}" Grid.Column="0" Grid.ColumnSpan="3" VerticalAlignment="Bottom" Margin="0 0 0 5"/>
            <Grid Grid.Column="1" Margin="0,0,0,7">
                <Menu Height="36" VerticalAlignment="Top">
                    <MenuItem x:Name="menuHeader" Header="Ai đó?" Height="35" Width="180">
                        <MenuItem x:Name="menuDangnhap" Header="Đăng nhập" Click="menuDangnhap_Click"></MenuItem>
                        <MenuItem x:Name="menuDangxuat" Header="Đăng xuất" Visibility="Collapsed" Click="menuDangxuat_Click"></MenuItem>
                    </MenuItem>
                </Menu>
            </Grid>
        </Grid>
        <Grid x:Name="mainGrid" HorizontalAlignment="Stretch" Grid.Row="1">
        </Grid>
    </Grid>
</flat:FlatWindow>
