<Window x:Class="Quiz.View.AboutView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AboutView" Height="387" Width="748" AllowsTransparency="True" WindowStartupLocation="CenterScreen" WindowStyle="None" Background="Transparent">
    <Window.Triggers>
        <EventTrigger RoutedEvent="Window.Loaded">
            <BeginStoryboard>
                <Storyboard>
                    <DoubleAnimation Duration="00:00:0.4" Storyboard.TargetProperty="Opacity" From="0" To="1"/>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </Window.Triggers>
    <Grid Name="MainGrid" MouseDown="MainGrid_MouseDown">
        <Grid.Background>
            <ImageBrush ImageSource="/Quiz;component/Images/QuizAppScreen.png"/>
        </Grid.Background>
        <Label Content="v.2" Foreground="White" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0 0 25 17" FontSize="15"/>
    </Grid>
</Window>
