<flat:FlatWindow x:Class="Quiz.View.CreateUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:flat="clr-namespace:FlatTheme.ControlStyle;assembly=FlatTheme" Height="250" Width="400" Style="{DynamicResource FlatWindow}" WindowStartupLocation="CenterScreen" FontSize="15" Title="Đăng nhập" ResizeMode="NoResize" ShowInTaskbar="False">
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
        <StackPanel x:Name="panelDangnhap" Width="150" Margin="10">
            <Label Content="Đăng nhập" HorizontalContentAlignment="Center" Foreground="{DynamicResource MainColor}"/>
            <TextBox Style="{DynamicResource FloatingHintTextBox}" x:Name="txtUsername" TextWrapping="Wrap" Tag="Tên đăng nhập"/>
            <PasswordBox x:Name="txtPassword" Tag="Mật khẩu"/>
            <Button x:Name="btnDangnhap" Content="Đăng nhập" HorizontalAlignment="Center" VerticalAlignment="Top" Click="btnDangnhap_Click" Margin="0,10,0,0" Height="40"/>
            <Label Content="Đăng kí" FontSize="8" HorizontalAlignment="Right" Margin="0,30,0,0" MouseDown="Label_MouseDown"/>
        </StackPanel>
        <StackPanel x:Name="panelDangki" Width="150" Visibility="Collapsed" Margin="10">
            <Label Content="Đăng kí" HorizontalContentAlignment="Center" Foreground="{DynamicResource MainColor}"/>
            <TextBox Style="{DynamicResource FloatingHintTextBox}" x:Name="txtName" TextWrapping="Wrap" Tag="Tên đăng kí"/>
            <PasswordBox x:Name="txtPass" Tag="Mật khẩu"/>
            <PasswordBox x:Name="txtRetypePass" Tag="Nhập lại mật khẩu"/>
            <Button x:Name="btnDangki" Content="Đăng kí" HorizontalAlignment="Center" VerticalAlignment="Top" Click="btnDangki_Click" Margin="0,10,0,0" Height="40"/>
        </StackPanel>
    </StackPanel>
</flat:FlatWindow>
